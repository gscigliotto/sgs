@model SGS.MvcWebApp.Models.LoginModel

@{
    Layout = "../Shared/_SecurityLayout.cshtml";
}

<div class="col-xs-12 col-sm-12 col-md-5 col-lg-4 col-md-offset-3">
    <div class="well no-padding">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "login-form", ReturnUrl = ViewBag.ReturnUrl, Class = "smart-form client-form" }))
        {
            @Html.AntiForgeryToken()
            <header>
                Login
            </header>

            <fieldset>

                <section>
                    @Html.LabelFor(m => m.UserName)
                    <label class="input">
                        <i class="icon-append fa fa-user"></i>
                        @Html.TextBoxFor(m => m.UserName)
                        <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Ingrese su nombre de usuario</b>
                    </label>
                </section>

                <section>
                    @Html.LabelFor(m => m.Password)
                    <label class="input">
                        <i class="icon-append fa fa-lock"></i>
                        @Html.PasswordFor(m => m.Password)
                        <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Ingrese su contraseña</b>
                    </label>
                    <div class="note">
                        @Html.ActionLink("Recuperar contraseña", "ForgotPassword", "Account")
                    </div>
                </section>
                <section>
                    @Html.ValidationSummary(true)
                </section>
            </fieldset>
            <footer>
                <button type="submit" class="btn btn-primary">
                    Ingresar
                </button>
            </footer>
        }
    </div>
</div>

        <script type="text/javascript">
            runAllForms();

            $(function () {
                // Validation
                $("#login-form").validate({
                    // Rules for form validation
                    rules: {
                        UserName: {
                            required: true
                        },
                        Password: {
                            required: true,
                            minlength: 3,
                            maxlength: 20
                        }
                    },

                    // Messages for form validation
                    messages: {
                        UserName: {
                            required: 'Ingrese su nombre de usuario'
                        },
                        Password: {
                            required: 'Ingrese su contraseña'
                        }
                    },

                    // Do not change code below
                    errorPlacement: function (error, element) {
                        error.insertAfter(element.parent());
                    }
                });
            });
        </script>



